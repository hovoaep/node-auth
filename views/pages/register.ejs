<%- include("../partials/head.ejs") %>
<div class="container">
  <div class="d-flex justify-content-center h-100">
    <div class="card">
      <div class="card-header">
        <h3>Register</h3>
        <div class="d-flex justify-content-end social_icon">
          <a href="/auth/facebook"
            ><span><i class="fab fa-facebook-square"></i></span
          ></a>
          <a href="/auth/google"
            ><span><i class="fab fa-google-plus-square"></i></span
          ></a>
        </div>
      </div>
      <div class="card-body">
        <form action="/register" method="POST">
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"
                ><i class="fas fa-signature"></i
              ></span>
            </div>
            <input
              type="text"
              name="name"
              class="form-control"
              placeholder="Name"
              value="<%= user.name %>"
            />
            <% if(errors.name){ %>
            <div class="invalid-feedback">Name filed is required</div>
            <% } %>
          </div>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-user"></i></span>
            </div>
            <input
              type="email"
              name="email"
              class="form-control"
              placeholder="Email"
              value="<%= user.email %>"
            />
            <% if(errors.email){ %>
            <div class="invalid-feedback">Email filed is required</div>
            <% } %>
          </div>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-phone"></i></span>
            </div>
            <input
              type="number"
              name="phone"
              class="form-control"
              placeholder="Phone numebr"
              value="<%= user.phone %>"
            />
            <% if(errors.phone){ %>
            <div class="invalid-feedback">Phone filed is required</div>
            <% } %>
          </div>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-key"></i></span>
            </div>
            <input
              name="password"
              type="password"
              class="form-control"
              placeholder="password"
            />
            <% if(errors.password){ %>
            <div class="invalid-feedback">Password filed is required</div>
            <% } %>
          </div>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-key"></i></span>
            </div>
            <input
              name="password2"
              type="password"
              class="form-control"
              placeholder="Confirm password"
            />
            <% if(errors.password2){ %>
            <div class="invalid-feedback">Password must be equal</div>
            <% } %>
          </div>
          <div class="form-group">
            <input
              type="submit"
              value="Login"
              class="btn float-right login_btn"
            />
          </div>
        </form>
      </div>
      <div class="card-footer">
        <div class="d-flex justify-content-center">
          <a href="/forgot-password">Forgot your password?</a>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("../partials/footer.ejs") %>
